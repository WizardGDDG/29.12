#include <iostream>
int* memoryAllocation(int size)
{
    int* arr = new int[size];
    return arr;
}
void arrayInitialization(int* arr, int size)
{
    std::cout << "Заполните массив: " << std::endl;

    for (int i = 0; i < size; i++)
    {

        std::cin >> arr[i];

    }
}
void arrayPrint(int* arr, int size)
{
    std::cout << "Вывод массива " << std::endl;
    for (int i = 0; i < size; i++)
    {
        std::cout << arr[i] << " ";
    }
}
int* addElement(int* arr, int size)
{
    int* arr2 = new int[size + 1];
    for (int i = 0; i < size + 1; i++)
    {
        if (i == size)
        {
            arr2[i] = 0;
        }
        else
        {
            arr2[i] = arr[i];
        }
    }
    for (int i = 0; i < size + 1; i++)
    {
        std::cout << arr2[i] << " ";
    }
    return arr2;
    delete[] arr;
}
// добавить вставку и удаление элемента по указаному индексу
void arrayDelete(int* arr)
{
    delete[] arr;
}
void pasteInArray(int* arr,int size, int index)
{
    int* array = new int[size + 1];
   
    for (int i = 0; i < size+1; i++)
    {
        
        if (i < index)
        {
            
            array[i] = arr[i];
            
        }
        else
        {
            if (i > index)
            {
                array[i+1] = arr[i];
            }
            if (i == index)
            {
                array[i] = 0;
                array[i + 1] = arr[i];
            }
            
        }
        
        
    }
    delete[] arr;

    for (int i = 0; i < size+1; i++)
    {
        std::cout << array[i];
    }
}
void deleteFromArray(int* arr, int size, int index)
{
    int* array = new int[size - 1];
    
    for (int i = 0; i < size - 1; i++)
    {

        if (i < index)
        {

            array[i] = arr[i];

        }
        else
        {
            if (i > index)
            {
                array[i] = arr[i+1];
            }
            if (i == index)
            {
                array[i] = arr[i+1];
                
            }

        }


    }
    delete[] arr;

    for (int i = 0; i < size - 1; i++)
    {
        std::cout << array[i];
    }
}
